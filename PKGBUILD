pkgname=ember-plasma-theme
pkgver=2.0
pkgrel=2
pkgdesc="Ember Plasma theme"
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php/Ember?content=124303"
license=('GPL')
source=('http://kde-look.org/CONTENT/content-files/124303-Ember-2.0.tar.gz')
md5sums=('e2f030614e152c231027555fb65a44b4')

build() {
  mkdir -p $startdir/pkg/usr/share/apps/desktoptheme
  cd $startdir/src
  cp -R Ember $startdir/pkg/usr/share/apps/desktoptheme

}
